{
    "compilerOptions":
	{
		"allowJs"                     : false,
		"allowSyntheticDefaultImports": true,
		"baseUrl"                     : "src",
		"esModuleInterop"             : true,
		"jsx"                         : "react-jsx",
		"lib"                         :
		[
			"DOM",
			"ES2019"
		],
        "module"          : "es6",
        "moduleResolution": "node",
        "noImplicitAny"   : true,
        "outDir"          : "./public/",
        "paths"           :
		{
			"app/*":
			[
				"app/*"
			],
		},
        "preserveConstEnums": true,
        "resolveJsonModule" : true,
        "removeComments"    : true,
        "sourceMap"         : true,
        "target"            : "es5"
    },
	"exclude": [],
    "include":
	[
        "./src/**/*"
    ]
}
